<div class="row">
    {{ form_start(form, {'attr': {'id': 'form-post', 'class': 'row' }}) }}
    <div class="col-12 col-md-8">
        {{ form_widget(form._token) }}
        <div class="mb-3">
            {{ form_label(form.lastname, 'Lastname', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
            {% if form_errors(form.lastname) %}
            <div id="post_lastnameFeedback" class="invalid-feedback">
                {{ form_errors(form.lastname) }}
            </div>
            {% endif %}
        </div>
        <div class="mb-3">
            {{ form_label(form.firstname, 'Firstname', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
            {% if form_errors(form.firstname) %}
            <div id="post_firstnameFeedback" class="invalid-feedback">
                {{ form_errors(form.firstname) }}
            </div>
            {% endif %}
        </div>
        <div class="mb-3">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
            {% if form_errors(form.email) %}
            <div id="post_emailFeedback" class="invalid-feedback">
                {{ form_errors(form.email) }}
            </div>
            {% endif %}
        </div>
        <div class="mb-3">
            {{ form_label(form.password, 'Password', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
            {% if form_errors(form.password) %}
            <div id="post_passwordFeedback" class="invalid-feedback">
                {{ form_errors(form.password) }}
            </div>
            {% endif %}
        </div>
    </div>
    <div class="col-12 col-md-4 d-flex flex-column">
        <div class="order-1 order-md-0">
            <p class="mb-0 fw-bold">Actions</p>
            <hr class="my-4">
            <div class="mb-3">
                {% set btn_label = button_label|default('Save') %}
                <button type="submit" id="submit-post" class="btn btn-success btn-lg w-100">{{ btn_label
                    }}</button>
            </div>
        </div>
        <div class="order-0 order-md-1">
            <div class="mb-3">
                <hr class="my-4 d-none d-md-block">
                {{ form_label(form.roles, 'Roles', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.roles, { 'attr': {'class': 'form-control'} }) }}
                {% if form_errors(form.roles) %}
                <div id="post_rolesFeedback" class="invalid-feedback">
                    {{ form_errors(form.roles) }}
                </div>
                {% endif %}
            </div>
            <div class="mb-3">
                {{ form_label(form.is_verified, 'Active', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.is_verified, { 'attr': {'class': 'form-control'} }) }}
                {% if form_errors(form.is_verified) %}
                <div id="post_is_verifiedFeedback" class="invalid-feedback">
                    {{ form_errors(form.is_verified) }}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{{ form_end(form, {'render_rest': false}) }}
</div>
