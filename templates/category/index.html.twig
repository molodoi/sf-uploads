{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-10">
            <h1 class="mt-3">All categories</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="{{ path('app.home') }}">Dashboard</a></li>
                <li class="breadcrumb-item active">All categories</li>
            </ol>
        </div>
        <div class="col-12 col-md-2">
            <div class="d-flex h-100 align-items-center justify-content-start justify-content-md-end">
                <a href="{{ path('app.category.new') }}" class="btn btn-primary">Create new</a>
            </div>
        </div>
        <div class="col-12">
            <hr class="my-2">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th{% if categories.isSorted('c.title') %} class="sorted"{% endif %}>
                            {{ knp_pagination_sortable(categories, 'Title', 'c.title') }}
                        </th>
                        <th{% if categories.isSorted('c.createdAt') %} class="sorted"{% endif %}>
                            {{ knp_pagination_sortable(categories, 'Created at', 'c.createdAt') }}
                        </th>
                        <th>
                            {{ knp_pagination_sortable(categories, 'Updated at', 'c.updatedAt') }}
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <th scope="row">{{ category.title }}</th>
                            <td class="d-none d-md-table-cell">{{ category.createdAt ? category.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                            <td class="d-none d-md-table-cell">{{ category.updatedAt ? category.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                            <td class="d-flex justify-content-end">
                                <a href="{{ path('app.category.edit', {'id': category.id}) }}" class="btn btn-primary me-1">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                    Edit
                                </a>
                                <form method="post" action="{{ path('app.category.delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                    <button class="btn btn-danger">
                                        <i class="fa-solid fa-trash"></i>
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <th colspan="6">Total {{ categories.getTotalItemCount }} categories</th>
                    </tr>
                    </tbody>
                </table>
            </div>
            {% include 'partials/pagination.html.twig' with {'pagination': categories} %}
        </div>
    </div>
{% endblock %}
