{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12 col-md-10">
        <h1 class="mt-3">All posts</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('app.home') }}">Dashboard</a></li>
            <li class="breadcrumb-item active">All posts</li>
        </ol>
    </div>
    <div class="col-12 col-md-2">
        <div class="d-flex h-100 align-items-center justify-content-start justify-content-md-end">
            <a href="{{ path('app.post.new') }}" class="btn btn-primary">Create new</a>
        </div>
    </div>
    <div class="col-12 h-full">
        <hr class="my-2">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th{% if posts.isSorted('c.title') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(posts, 'Title', 'p.title') }}
                    </th>
                    <th>Category</th>
                    <th{% if posts.isSorted('c.createdAt') %} class="sorted"{% endif %}>
                        {{ knp_pagination_sortable(posts, 'Created at', 'p.createdAt') }}
                    </th>
                    <th>
                        {{ knp_pagination_sortable(posts, 'Updated at', 'p.updatedAt') }}
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
        {% for post in posts %}
            <tr>
                <th scope="row">{{ post.title }}</th>
                <td>{{ post.category.title }}</td>
                <td class="d-none d-md-table-cell">{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="d-none d-md-table-cell">{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="d-flex justify-content-end">
                    <a href="{{ path('app.post.edit', {'id': post.id}) }}" class="btn btn-primary me-1">
                        <i class="fa-regular fa-pen-to-square"></i>
                        Edit
                    </a>
                    <form method="post" action="{{ path('app.post.delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                        <button class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i>
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        <tr>
            <th colspan="6">Total {{ posts.getTotalItemCount }} posts</th>
        </tr>
                </tbody>
            </table>
        </div>
        {% include 'partials/pagination.html.twig' with {'pagination': posts} %}
    </div>
</div>
{% endblock %}
