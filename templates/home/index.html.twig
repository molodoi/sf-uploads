{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1 class="mt-3">Welcome</h1>
        <hr class="my-2">
    </div>
</div>
<div class="row">
    {% for post in posts %}
    <div class="col-12 col-md-4">
        <div class="card mb-4">
            {% if(post.featuredImage and post.featuredImage.imageName is not null) %}
            <img src="{{ vich_uploader_asset(post.featuredImage,'imageFile') | imagine_filter('post_thumbnail') }}"
                alt="" class="img-fluid">
            {% else %}
            <img src="/600x280.png" alt="" class="img-fluid">
            {% endif %}
            <div class="card-body">
                <h5 class="card-title">
                    <a href="{{ path('app.post.show', {'id': post.id}) }}" class="stretched-link">
                        {{ post.title }}
                    </a>
                </h5>
            </div>
        </div>
    </div>
    {% else %}
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-body">
                <p class="mb-0">
                    There's no no posts for the moment.<br />
                    <a href="{{ path('app.post.new') }}" class="btn btn-primary">Add
                        new one</a>
                </p>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
<div class="row">
    <div class="col-12">
        {% include 'partials/pagination.html.twig' with {'pagination': posts, align: 'center'} %}
    </div>
</div>

{% endblock %}